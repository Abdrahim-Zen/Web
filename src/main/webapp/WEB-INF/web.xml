<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tecnico</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.TecnicoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>utenteRegistrato</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.UtenteRegistratoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>amministratore</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.AmministratoreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestioneCategorie</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.GestioneCategorieController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>gestioneOrdini</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.GestioneOrdiniController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RichiestaAcquisto</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.RichiestaAcquistoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatoRichieste</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.StatoRichiesteController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProdottoCandidato</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.ProdottoCandidatoController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.LoginController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>gestioneUtenti</servlet-name>
        <servlet-class>it.univaq.webmarket.controller.GestioneUtenti</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>StatoRichieste</servlet-name>
        <url-pattern>/statoRichieste</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>gestioneOrdini</servlet-name>
        <url-pattern>/gestioneOrdini</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>gestioneCategorie</servlet-name>
        <url-pattern>/gestioneCategorie</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>gestioneUtenti</servlet-name>
        <url-pattern>/gestioneUtenti</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>amministratore</servlet-name>
        <url-pattern>/amministratore</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RichiestaAcquisto</servlet-name>
        <url-pattern>/richiestaAcquisto</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProdottoCandidato</servlet-name>
        <url-pattern>/prodottoCandidato</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>tecnico</servlet-name>
        <url-pattern>/tecnico</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>utenteRegistrato</servlet-name>
        <url-pattern>/utenteRegistrato</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/market</param-value>
    </context-param>
    
    <listener>
        <listener-class>it.univaq.webmarket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.modules_directory</param-name>
        <param-value>modules/</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>debug</param-name>
        <param-value>false</param-value>
    </context-param>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/market</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
